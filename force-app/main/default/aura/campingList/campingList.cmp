<aura:component>
        <aura:attribute name="items" type="Camping_Item__c[]"/>

        <aura:attribute name="newItem" type="Camping_Item__c"
         default="{ 'sobjectType': 'Camping_Item__c',
                        'Name': '',
                        'Quantity__c': 0,
                        'Price__c': 0,
                        'Packed__c': false }"/>

    
    <!-- NEW CAMPING FORM -->
    <lightning:layout>
        <lightning:layoutItem padding="around-small" size="6">
    <!-- CREATE NEW ITEM -->
            <c:campingHeader/>
    <div aria-labelledby="newcampingform">
        <!-- BOXED AREA -->
        <fieldset class="slds-box slds-theme--default slds-container--small">
        <legend id="newCampingform" class="slds-text-heading--small 
          slds-p-vertical--medium">
          Add Camping Item
        </legend>
  
        <!-- CREATE NEW CAMPING FORM -->
        <form class="slds-form--stacked">          
            <lightning:input aura:id="campingform" label="Item Name"
                             name="itemname"
                             value="{!v.newItem.Name}"
                             required="true"/> 
            <lightning:input type="number" aura:id="campingform" label="Quantity"
                             name="itemquantity"
                             value="{!v.newItem.Quantity__c}"
                             min="1"
                             step="1"
                             messageWhenRangeUnderflow="Enter a quantity of at least 1."/>
            <lightning:input type="number" aura:id="campingform" label="Price"
                             name="itemprice"
                             min="0.1"
                             formatter="currency"
                             step="0.01"
                             value="{!v.newItem.Price__c}"
                             messageWhenRangeUnderflow="Enter an amount that's at least $0.10."/>
            
            <lightning:input type="checkbox" aura:id="campingform" label="Packed?"  
                             name="itempacked"
                             checked="{!v.newItem.Packed__c}"/>
            <lightning:button label="Add item to list" 
                              class="slds-m-top--medium"
                              variant="brand"
                              onclick="{!c.clickCreateItem}"/>
        </form>
        <!-- / CREATE NEW CAMPING FORM -->
  
      </fieldset>
      <!-- / BOXED AREA -->
    </div>
    <!-- / CREATE NEW ITEM -->        </lightning:layoutItem>
    </lightning:layout>
    <!-- / NEW CAMPING FORM -->
    <!-- If I comment this section I no longer get the server error. -->
    <section class="slds-card__body">
    	<div id="list" class="row">
        <aura:iteration items="{!v.items}" var="item">
            <c:campingListItem item="{item}"/>
            </aura:iteration>
        </div>
    </section>

</aura:component>